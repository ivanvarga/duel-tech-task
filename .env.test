# Test Environment
# Used for running tests

NODE_ENV=test

# Route Configuration (all enabled for testing)
ENABLE_ADMIN_ROUTES=true
ENABLE_WORKER_ROUTES=true
ENABLE_WEB_ROUTES=true

# Server
PORT=3001
HOST=localhost

# Database (use test database)
MONGODB_URI=mongodb://localhost:27017/advocacy_platform_test

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=error

# Storage
STORAGE_TYPE=local
USER_FILES_PATH=./test/fixtures/users
