# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file provides working defaults for local development
# Copy this to .env: cp .env.local .env

# =============================================================================
# ROUTE CONFIGURATION
# =============================================================================
# Enable/disable specific route groups
# All enabled by default for local development

# Enable admin routes (React Admin dashboard)
ENABLE_ADMIN_ROUTES=true

# Enable worker routes (ETL processing)
ENABLE_WORKER_ROUTES=true

# Enable web routes (Public analytics API)
ENABLE_WEB_ROUTES=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string for local development
MONGODB_URI=mongodb://localhost:27017/advocacy_platform

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
PORT=3000

# Server host (use localhost for local development)
HOST=localhost

# Node environment
NODE_ENV=development

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# CORS origins (* allows all for development)
CORS_ORIGIN=*

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error | warn | info | debug
LOG_LEVEL=debug

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage type: local | s3
STORAGE_TYPE=local

# Local storage path (when STORAGE_TYPE=local)
USER_FILES_PATH=./users

# S3 storage (uncomment and configure when STORAGE_TYPE=s3)
# S3_BUCKET=my-advocacy-platform-uploads
# S3_REGION=us-east-1
# S3_PREFIX=user-uploads/
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
